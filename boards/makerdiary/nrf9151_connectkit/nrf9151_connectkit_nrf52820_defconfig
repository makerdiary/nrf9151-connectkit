# Enable MPU
CONFIG_ARM_MPU=y

# enable GPIO
CONFIG_GPIO=y

# enable PWM
CONFIG_PWM=y

# enable I2C
CONFIG_I2C=y

# enable charger
CONFIG_CHARGER=y

# enable LED(both LED_GPIO and LED_PWM)
CONFIG_LED=y

# Support UF2 Bootloader
CONFIG_USE_DT_CODE_PARTITION=y
CONFIG_BUILD_OUTPUT_UF2=y
CONFIG_BUILD_OUTPUT_UF2_FAMILY_ID="0x820D9A5F"
